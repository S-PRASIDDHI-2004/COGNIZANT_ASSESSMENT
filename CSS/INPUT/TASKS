    section id="toggleDemo">
      h2>Visibility vs Display Demo/h2>
      p>Click buttons below to hide/show the text box using different CSS properties./p>
      button onclick="hideVisibility()">Hide with visibility: hidden/button>
      button onclick="hideDisplay()">Hide with display: none/button>
      button onclick="showText()">Show Text/button>
      div id="demoText">This text will be hidden either by visibility:hidden or display:none./div>
    /section>
  /main>

script>
  const demoText = document.getElementById('demoText');

  function hideVisibility() {
    demoText.classList.add('hidden');
    demoText.classList.remove('none');
  }

  function hideDisplay() {
    demoText.classList.add('none');
    demoText.classList.remove('hidden');
  }

  function showText() {
    demoText.classList.remove('hidden');
    demoText.classList.remove('none');
  }
/script>
/body>
/html>

